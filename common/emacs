  "w" 'save-buffer
  "d" 'kill-this-buffer
  "gs" 'magit-status
  "t" 'helm-projectile
  "m" 'neotree-toggle
  ;; "ev" 'load-file ~/.emacs
  "rs" 'rspec-verify-all
  "v" 'rubocop-check-current-file
  "b" 'switch-to-buffer
  "x" 'helm-M-x
  "a" 'helm-do-ag-project-root
